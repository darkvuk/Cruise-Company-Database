@model Kruzer.Repository.Models.DB.LukaModel


@{
    ViewBag.Title = "My View's Title";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div>
    <br />
    <h1>Dodaj novu luku</h1>
    @using (@Html.BeginForm("Store", "Luka", FormMethod.Post))
    {
        <div class="form-group">
            <label>Kod luke</label>
            @Html.TextAreaFor(m => m.KOD, new { @class = "form-control", @rows = 1 })
            <br />
        </div>
        <div class="form-group">
            <label>Grad</label>
            @Html.TextAreaFor(m => m.Ime_grada, new { @class = "form-control", @rows = 1 })
            <br />
        </div>
        <div class="form-group">
            <label>Država</label>
            @Html.DropDownListFor(m => m.Ime_drzave,
           new SelectList(ViewBag.Drzava, "Ime_drzave", "Ime_drzave"), new { @class = "form-control" })
            <br />
        </div>

        <button type="submit" class="btn btn-primary">Sačuvaj</button>
    }
</div>


@section footer{
    <hr />
    <footer>
        &copy; Great Sea Cruises 2022
    </footer>
}
